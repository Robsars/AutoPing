{
  "name": "autoping",
  "version": "1.0.0",
  "description": "AutoPing - Automated HTTP Ping Scheduler Desktop App",
  "main": "main.js",
  "author": "AutoPing",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "electron:dev": "concurrently \"cd client && npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
    "build:client": "cd client && npm run build",
    "package": "npm run build:client && electron-forge package",
    "make": "npm run build:client && electron-forge make",
    "web-build": "npm install && cd client && npm install && npm run build && cd ../server && npm install",
    "web-start": "node server/server.js"
  },
  "config": {
    "forge": "./forge.config.js"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.10.2",
    "@electron-forge/maker-squirrel": "^7.10.2",
    "@electron-forge/maker-zip": "^7.10.2",
    "concurrently": "^8.2.2",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "cors": "^2.8.5",
    "cron-parser": "^4.9.0",
    "dotenv": "^17.2.3",
    "express": "^4.18.2",
    "node-cron": "^3.0.3",
    "node-notifier": "^10.0.1",
    "nodemailer": "^7.0.11",
    "sqlite3": "^5.1.6"
  },
  "build": {
    "appId": "com.autoping.app",
    "productName": "AutoPing",
    "npmRebuild": false,
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "server/**/*",
      "!server/node_modules",
      "!server/*.db",
      "client/dist/**/*"
    ],
    "asarUnpack": [
      "**/*.node",
      "**/node_modules/sqlite3/**/*",
      "**/node_modules/node-notifier/**/*"
    ],
    "extraResources": [
      {
        "from": "server/.env.example",
        "to": ".env.example"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
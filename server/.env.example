# Email Configuration for AutoPing Notifications
# Copy this file to .env and fill in your SMTP credentials

# SMTP Server Settings
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false

# SMTP Authentication
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Email Settings
EMAIL_FROM=AutoPing <your-email@gmail.com>
EMAIL_FROM_NAME=AutoPing Alert System

# Rate Limiting (minutes between emails for same job)
EMAIL_RATE_LIMIT_MINUTES=60
